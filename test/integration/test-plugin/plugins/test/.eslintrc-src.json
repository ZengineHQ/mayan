{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "./.eslintrc-legacy.json",
    "globals": {
        "Promise": "readonly",
        "plugin": "readonly",
        "Handlebars": "readonly",
        "showdown": "readonly",
        "BigNumber": "readonly",
        "moment": "readonly"
    },
    "rules": {
        "no-restricted-globals": [
            "error",
            {
                "name": "Promise",
                "message": "Using Promise in legacy plugin code causes unpredictable behavior. Refactor to use $q instead."
            }
        ]
    }
}