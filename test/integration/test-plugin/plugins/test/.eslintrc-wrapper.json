{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "./.eslintrc-legacy.json",
    "globals": {
        "Promise": "readonly"
    },
    "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "space-before-function-paren": ["error", "always"]
    }
}